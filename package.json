{
	"name": "fbchat",
	"displayName": "fbchat",
	"description": "Chat on facebook",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.45.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:fbchat.openChat"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "fbchat.openChat",
				"title": "FBChat: Open thread"
			},
			{
                "command": "fbchat.reply",
                "title": "FBChat: Reply",
                "enablement": "resourceScheme == fbchat"
            },
            {
                "command": "fbchat.logout",
                "title": "FBChat Logout",
                "enablement": "resourceScheme == fbchat"
			}
        ],
        "menus": {
            "editor/title": [
              {
                "command": "fbchat.reply",
                "group": "navigation",
                "when": "resourceScheme == fbchat"
              }
            ],
            "commandPalette": [
                {
                    "command": "fbchat.reply",
                    "when": "resourceScheme == fbchat"
                }
            ]
        }
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"@types/vscode": "^1.45.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"@typescript-eslint/parser": "^2.30.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"facebook-chat-api": "^1.8.0"
	}
}
